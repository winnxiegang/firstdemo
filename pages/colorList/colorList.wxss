.container {
  display: flex; /* 启用 flex 布局 */
  flex-direction: row;/*  布局横向排列 */
 
  align-items: flex-start; /* 左对齐 */
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx 20rpx;
  background-color: white;
}

 
.icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 20rpx; /* 图标与文本之间的间距 */
  flex-shrink: 0; /* 防止图片被压缩 */
}

.texts {
  display: flex; /* 启用 flex 布局 */
  flex-direction: column; /* 竖向排列 */
  align-items: flex-start; /* 左对齐 */
}
 
